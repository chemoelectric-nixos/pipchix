#!@SHELL@
#
# Run a tiny Râ·RS program in the CHICKEN 5 interpreter.
#

prog_scm=`TMPDIR=. mktemp 2>/dev/null || echo tmp."${RANDOM}"`.scm

cat > "${prog_scm}" <<EOF
(import (scheme base))
(import (scheme write))
(import (scheme process-context))
(import (pipchix abstract-syntax-tree))
(import (pipchix nix-embed))
(import (pipchix nix-list))
(import (pipchix nix-set))
(import (pipchix string-manipulation))
(output-nix-abstract-syntax-tree $1)
(exit 0)
EOF

new_repository_path ()
{
    @CSI_5@ -n -b -R r7rs -R utf8-srfi-13 -R chicken.platform \
          -e '
          (display
           (string-join
            (cons "@abs_top_builddir@/chicken/eggs/5/pipchix"
                  (repository-path))
             ":"))'
}

env LC_ALL="@TEST_LOCALE@" \
    LANG="@TEST_LOCALE@" \
    CHICKEN_REPOSITORY_PATH=`new_repository_path` \
    @CSI_5@ -n -b -R utf8 -R r7rs -s "${prog_scm}"

rm "${prog_scm}"

exit 0

