#!@SHELL@
#
# Run a tiny Râ¶RS program in Racket (using whatever Racket
# implementation the plt-r6rs command invokes).
#

prog_scm=`TMPDIR=. mktemp 2>/dev/null || echo tmp."${RANDOM}"`.scm

cat > "${prog_scm}" <<EOF
#!r6rs
(import (rnrs (6))
        (pipchix abstract-syntax-tree)
        (pipchix nix-embed)
        (pipchix nix-list)
        (pipchix nix-set)
        (pipchix string-manipulation))
(output-nix-abstract-syntax-tree $1)
(exit 0)
EOF

env LC_ALL="@TEST_LOCALE@" \
    LANG="@TEST_LOCALE@" \
    @PLT_R6RS@ ++path '@abs_top_builddir@/r6rs' "${prog_scm}"

rm "${prog_scm}"

exit 0

