AT_SETUP([setup_message((pipchix nix-letrec))])

AT_KEYWORDS([default_keywords nix-letrec])

m4_define([sexpr],[(nix-letrec ((`a `b `c ==> @%:@f)) nix-true)])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([(let·a·.·b·.·c·=·nix_false;·in(·nix_true))·])],[])

m4_define([sexpr],
  [(nix-letrec
       ((`a ==> 3)
        (4 <== `b)
        (inherit "c")
        (inherit-from `builtins `fromJSON `toJSON))
     (nix-set (`x ==> (nix-embed "a + b + c"))))])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([(let·a·=·(3)·;·b·=·(4)·;·c·=·c·;·fromJSON·=·builtins·.·fromJSON·;·toJSON·=·builtins·.·toJSON·;·in(·({·x·=·a + b + c;·})·))·])],[])

m4_define([sexpr],
  [(nix-let*
       ((`a ==> 3)
        ("a" <== `b)
        (inherit "a")
        (inherit-from `builtins `fromJSON `toJSON)
        ("x" ==> "fromJSON"))
     (nix-list))])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([(let·a·=·(3)·;·in(·(let·b·=·("a")·;·in(·(let·a·=·a·;·in(·(let·fromJSON·=·builtins·.·fromJSON·;·in(·(let·toJSON·=·builtins·.·toJSON·;·in(·(let·x·=·("fromJSON")·;·in(·@<:@·@:>@·))·))·))·))·))·))·])],[])

m4_define([sexpr],[(nix-let* () nix-null)])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([(let·in(·nix_null))·])],[])

AT_CLEANUP

