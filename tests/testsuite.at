m4_include(tests-template.at)

m4_define([run_r6rs_chez],["${abs_builddir}"/run-r6rs-chez.sh])
m4_define([run_r7rs_chibi],["${abs_builddir}"/run-r7rs-chibi.sh])
m4_define([run_r7rs_gauche],["${abs_builddir}"/run-r7rs-gauche.sh])
m4_define([run_r7rs_mit],["${abs_builddir}"/run-r7rs-mit.sh])
m4_define([run_r6rs_loko],["${abs_builddir}"/run-r6rs-loko.sh])
m4_define([run_r7rs_loko],["${abs_builddir}"/run-r7rs-loko.sh])
m4_define([run_r6rs_sagittarius],["${abs_builddir}"/run-r6rs-sagittarius.sh])
m4_define([run_r7rs_sagittarius],["${abs_builddir}"/run-r7rs-sagittarius.sh])

tests_template([Chez Scheme (R⁶RS)],
  [R6RS r6rs Chez chez chez-scheme chezscheme],
  [run_r6rs_chez])

tests_template([Chibi Scheme (R⁷RS)],
  [R7RS r7rs Chibi chibi chibi-scheme chibischeme],
  [run_r7rs_chibi])

tests_template([Gauche Scheme (R⁷RS)],
  [R7RS r7rs Gauche gauche gauche-scheme gauchescheme],
  [run_r7rs_gauche])

tests_template([MIT/GNU Scheme (R⁷RS)],
  [R7RS r7rs MIT MIT/GNU mit mit/gnu mit-scheme mitscheme],
  [run_r7rs_mit])

tests_template([Loko Scheme (R⁶RS)],
  [R6RS r6rs Loko loko loko-scheme lokoscheme],
  [run_r6rs_loko])

tests_template([Loko Scheme (R⁷RS)],
  [R7RS r7rs Loko loko loko-scheme lokoscheme],
  [run_r7rs_loko])

tests_template([Sagittarius Scheme (R⁶RS)],
  [R6RS r6rs Sagittarius sagittarius sagittarius-scheme
   sagittariusscheme sash],
  [run_r6rs_sagittarius])

tests_template([Sagittarius Scheme (R⁷RS)],
  [R7RS r7rs Sagittarius sagittarius sagittarius-scheme
   sagittariusscheme sash],
  [run_r7rs_sagittarius])

