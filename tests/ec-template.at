m4_define([sexpr],
  [(scheme->nix
    (let ()
      (define-syntax λ
        (syntax-rules ()
          ((¶ args body ...)
           (lambda args body ...))))
      (define insert
        (λ (µ κ ν)
          (call-with-values (λ () (split-at κ ν))
            (λ (α β) `(,@α ,µ ,@β)))))
      (define (permutations lst)
        (let ((n (length lst)))
          (attempt-or
            (begin (attempt-zero n) '\''(()))
            (list-ec
              (:list p (permutations (cdr lst)))
              (:range i 0 n)
              (insert (car lst) p i)))))
      (define (make-permutations-coexp lst)
        (make-co-expression
         (lambda ()
           (let ((n (length lst)))
             (attempt-or
               (begin (attempt-zero n) (suspend '\''()))
               (attempt-and-ec
                 (:list p (permutations (cdr lst)))
                 (:range i 0 n)
                 (suspend (insert (car lst) p i))))))))
      (define p! (make-permutations-coexp (iota 3 1)))
      (list-ec (:goal-directed κ (p!)) κ)))])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([[[·[·(1)·(2)·(3)·]·[·(2)·(1)·(3)·]·[·(2)·(3)·(1)·]·[·(1)·(3)·(2)·]·[·(3)·(1)·(2)·]·[·(3)·(2)·(1)·]·]·]])],[])

