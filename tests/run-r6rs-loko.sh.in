#!@SHELL@
#
# Run a tiny Râ¶RS program in Loko Scheme.
#

prog_scm=`@abs_top_builddir@/tempname`.scm

cat > "${prog_scm}" <<EOF
#!r6rs
(import (except (rnrs (6)) fold-right member assoc map remove)
        (rnrs mutable-strings (6))
        (pipchix general-purpose cut)
        (pipchix general-purpose list)
        (pipchix general-purpose match)
        (pipchix general-purpose division)
        (pipchix general-purpose e-macros)
        (pipchix general-purpose eager-macros)
        (pipchix general-purpose ec)
        (pipchix general-purpose combinators)
        (pipchix general-purpose syntax)
        (pipchix general-purpose backtracking)
        (pipchix general-purpose continuation-capture)
        (pipchix abstract-syntax-tree)
        (pipchix nix-embed)
        (pipchix nix-list)
        (pipchix string-manipulation)
        (pipchix essentials))
(output-nix-abstract-syntax-tree $1)
(exit 0)
EOF

env LC_ALL="@TEST_LOCALE@" \
    LANG="@TEST_LOCALE@" \
    LOKO_LIBRARY_PATH="@abs_top_builddir@/r6rs" \
    @LOKO@ --program "${prog_scm}"

rm "${prog_scm}"

exit 0

