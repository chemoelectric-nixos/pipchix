AT_SETUP([setup_message((pipchix expressions))])

AT_KEYWORDS([default_keywords expressions])

m4_define([sexpr],[(nix-has? (nix-set (`a ==> 3)) `a)])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([(·({·a·=·(3)·;·})·?·a·)·])],[])

m4_define([sexpr],[(nix-has? (nix-set (`a ==> 3)) `(a b c))])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([(·({·a·=·(3)·;·})·?·a·.·b·.·c·)·])],[])

m4_define([sexpr],[(nix// `a `b)])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([(·a·//·b·)·])],[])

m4_define([sexpr],[(nix// `a `b (nix-set (`x ==> 3)))])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([(·a·//·(·b·//·({·x·=·(3)·;·})·)·)·])],[])

m4_define([sexpr],[(nix// "a" "b" "c" "d")])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([(·a·//·(·b·//·(·c·//·d·)·)·)·])],[])

m4_define([sexpr],[(nix++)])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([@<:@·@:>@·])],[])

m4_define([sexpr],[(nix++ (list 1 2))])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([@<:@·(1)·(2)·@:>@·])],[])

m4_define([sexpr],[(nix++ (list 1 2) (nix-list 3 4))])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([(·@<:@·(1)·(2)·@:>@·++·@<:@·(3)·(4)·@:>@·)·])],[])

m4_define([sexpr],[(nix++ (list 1 2) (nix-list 3 4) (list "a" "b"))])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([(·@<:@·(1)·(2)·@:>@·++·(·@<:@·(3)·(4)·@:>@·++·@<:@·("a")·("b")·@:>@·)·)·])],[])

m4_define([sexpr],[(nix++ (list 1 2) (nix-list 3 4) (list "a" "b") (list "c" "d"))])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([(·@<:@·(1)·(2)·@:>@·++·(·@<:@·(3)·(4)·@:>@·++·(·@<:@·("a")·("b")·@:>@·++·@<:@·("c")·("d")·@:>@·)·)·)·])],[])

m4_foreach([op],[+,-,*,/,<,<=,>,>=],[
m4_define([sexpr],[(nix[]op 1 2)])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([(·(1)·op·(2)·)·])],[])
])

m4_foreach([op],[+,*],[
m4_define([sexpr],[(nix[]op 1)])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([(1)·])],[])
])

m4_foreach([op],[+,*,-,/],[
m4_define([sexpr],[(nix[]op 1 2 3)])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([(·(·(1)·op·(2)·)·op·(3)·)·])],[])

m4_define([sexpr],[(nix[]op 1 2 3 4)])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([(·(·(·(1)·op·(2)·)·op·(3)·)·op·(4)·)·])],[])
])

m4_define([sexpr],[(nix*)])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([(1)·])],[])

m4_define([sexpr],[(nix- 1)])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([(·-·(1)·)·])],[])

m4_define([sexpr],[(nix/ 2)])
check_unquoted([run_scheme 'sexpr' | sed 's/1\.0/1./'],[0],
  [interpunct_nl([(·(1.)·/·(2)·)·])],[])

m4_define([sexpr],[(nix= 1 2)])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([(·(1)·==·(2)·)·])],[])

m4_define([sexpr],[(nix-not= 1 2)])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([(·(1)·!=·(2)·)·])],[])

m4_define([sexpr],[(nix-and nix-true nix-false)])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([(·nix_true&&·nix_false)·])],[])

m4_define([sexpr],[(nix-or nix-true nix-false)])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([(·nix_true||·nix_false)·])],[])

m4_define([sexpr],[(nix-> nix-true nix-false)])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([(·nix_true->·nix_false)·])],[])

m4_define([sexpr],[(nix-not nix-true)])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([(·!·nix_true)·])],[])

m4_define([sexpr],[(nix-if nix-true 3 4)])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([(if·nix_true[]then·(3)·else·(4)·)·])],[])

AT_CLEANUP

