AT_SETUP([setup_message((pipchix nix-set))])

AT_KEYWORDS([default_keywords nix-set nix-setrec])

m4_define([sexpr],[(nix-set)])
check_unquoted([run_scheme 'sexpr'],[0],[interpunct_nl([({·})·])],[])

m4_define([sexpr],[(nix-setrec)])
check_unquoted([run_scheme 'sexpr'],[0],[interpunct_nl([(rec{·})·])],[])

m4_define([sexpr],[(nix-set (`a ==> 123) (123 <== "b"))])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([({·a·=·(123)·;·b·=·(123)·;·})·])],[])

m4_define([sexpr],
  [(nix-setrec (`a `bc "def" ==> (nix-list 1 2 3))
               ((nix-embed "@<:@1 2 3@:>@") <== "b" "e.f.g" ))])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([(rec{·a·.·bc·.·def·=·@<:@·(1)·(2)·(3)·@:>@·;·b·.·"e.f.g"·=·@<:@1 2 3@:>@;·})·])],[])

m4_if(implementation,[csc-5],[],implementation,[csi-5],[],rnrs_version,[7],[
dnl I want to test the symbol prime' but it is difficult to get past
dnl shell quotes.
m4_define([primevar],[|prime\x27;|]) dnl This is R⁷RS notation for the symbol prime'
m4_define([sexpr],
  [(nix-set ((quote primevar) ==> (nix-set (`a ==> nix-true)
                                           (`b ==> nix-false)
                                           (`c ==> nix-null))))])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([({·prime'·=·({·a·=·nix_true;·b·=·nix_false;·c·=·nix_null;·})·;·})·])],[])
])

m4_define([sexpr],
  [(nix-set (`a ==> 123)
            (inherit () `hummingbirds `bluejays "robins" "ducks" `turkeys)
            (inherit ("bees") "bumble" `honey)
            (123 <== "b"))])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([({·a·=·(123)·;·inherit·hummingbirds·bluejays·robins·ducks·turkeys·;·inherit·(·bees·)·bumble·honey·;·b·=·(123)·;·})·])],[])

dnl m4_define([sexpr],[(nix-set (inherit "a" "b"))]) dnl  I do not know how to test this.
dnl check_unquoted([run_scheme 'sexpr'],[ignore],[ignore],[ignore])

m4_define([sexpr],
  [(nix-set
    (begin)
    (begin (inherit () "a" "b")
           (`c ==> `d)))])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([({·inherit·a·b·;·c·=·("d")·;·})·])],[])

m4_define([sexpr], dnl  A test of string interpolation on the left side of ==>
  [(nix-setrec ((nix-embed "a + b") ==> (nix-embed "c + d")))])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl((rec{·"\@S|@{a + b}"·=·c + d;·})·)],[])

m4_define([sexpr], dnl  A test of string interpolation on the right side of <==
  [(nix-setrec ((nix-embed "a + b") <== (nix-embed "c + d")))])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl((rec{·"\@S|@{c + d}"·=·a + b;·})·)],[])

m4_define([sexpr], dnl  A test of string interpolation on the left side of ==>
  [(nix-setrec ((scheme->nix "a + b") ==> (scheme->nix "c + d")))])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl((rec{·"\@S|@{("a + b")·}"·=·("c + d")·;·})·)],[])

m4_define([sexpr], dnl  A test of string interpolation on the right side of <==
  [(nix-setrec ((scheme->nix "a + b") <== (scheme->nix "c + d")))])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl((rec{·"\@S|@{("c + d")·}"·=·("a + b")·;·})·)],[])

AT_CLEANUP

