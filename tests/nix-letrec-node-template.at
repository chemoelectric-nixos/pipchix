AT_SETUP([setup_message(<nix-letrec-node>)])

AT_KEYWORDS([default_keywords nix-letrec-node nix-letrec])

m4_define([sexpr],
  [(make-nix-data-node
    (nix-letrec-node-recursive?
     (make-nix-letrec-node)))])
check_unquoted([run_scheme 'sexpr'],[0],[nix_true],[])

m4_define([sexpr],
  [(let ((lrnode (make-nix-letrec-node)))
     (set-nix-letrec-node-in-clause!
      lrnode (scheme->nix (list "a" "b" "c")))
     lrnode)])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl((let·in(·@<:@·("a")·("b")·("c")·@:>@·))·)],[])

m4_define([sexpr],
  [(let ((lrnode (make-nix-letrec-node)))
     (nix-letrec-node-set!
      lrnode (let ((key (list->nix-attributepath-node `(x)))
                   (value (make-nix-data-node 2)))
               (make-nix-attributebinding-node key value)))
     (nix-letrec-node-set!
      lrnode (let ((key (list->nix-attributepath-node `(y)))
                   (value (make-nix-data-node 3)))
               (make-nix-attributebinding-node key value)))
     (set-nix-letrec-node-in-clause!
      lrnode (make-nix-embedded-node "x + y"))
     lrnode)])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl((let·x·=·(2)·;·y·=·(3)·;·in(·x + y))·)],[])

AT_CLEANUP

