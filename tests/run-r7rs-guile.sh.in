#!@SHELL@
#
# Run a tiny Râ·RS program in Guile.
#

prog_scm=`TMPDIR=. mktemp 2>/dev/null || echo tmp."${RANDOM}"`.scm

cat > "${prog_scm}" <<EOF
(import (scheme base))
(import (scheme write))
(import (pipchix abstract-syntax-tree))
(import (pipchix nix-embed))
(import (pipchix nix-list))
(import (pipchix nix-set))
(import (pipchix string-manipulation))
(output-nix-abstract-syntax-tree $1)
(exit 0)
EOF

env LC_ALL="@TEST_LOCALE@" \
    LANG="@TEST_LOCALE@" \
    @GUILE@ --language=scheme --r7rs \
    -q -L '@abs_top_builddir@/r7rs' \
    --no-auto-compile -s "${prog_scm}" 2>/dev/null

rm "${prog_scm}"

exit 0

