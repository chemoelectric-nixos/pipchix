m4_define([success1_and_failure1],[
(define-syntax success1
  (syntax-rules ()
    ((¶ a b)
     (list `success `a `b))))
(define-syntax failure1
  (syntax-rules ()
    ((¶ a)
     (list `failure `a))))
])

m4_define([success2_and_failure2],[
(define (convert obj)
  (if (vector? obj)
    (vector->list obj)
    obj))
(define-syntax success2
  (syntax-rules ()
    ((¶ a b)
     (list `success (map convert `a) (map convert `b)))))
(define-syntax failure2
  (syntax-rules ()
    ((¶ a)
     (list `failure (map convert `a)))))
])

m4_define([success3_and_failure3],[
(define (list->proper-list obj)
  (cond ((and (not (null? obj)) (not-pair? obj)) obj)
        ((null? obj) obj)
        ((null? (cdr obj)) obj)
        ((pair? (cdr obj))
         (cons (car obj) (list->proper-list (cdr obj))))
        (else (list (car obj) (cdr obj)))))
(define-syntax success3
  (syntax-rules ()
    ((¶ a b)
     (list `success (map list->proper-list `a)
                    (map list->proper-list `b)))))
(define-syntax failure3
  (syntax-rules ()
    ((¶ a)
     (list `failure (map list->proper-list `a)))))
])

m4_define([success4_and_failure4],[
(define (convert obj)
  (if (char? obj) (string obj) obj))
(define-syntax success4
  (syntax-rules ()
    ((¶ a b)
     (list `success (map convert `a)
                    (map convert `b)))))
(define-syntax failure4
  (syntax-rules ()
    ((¶ a)
     (list `failure (map convert `a)))))
])

