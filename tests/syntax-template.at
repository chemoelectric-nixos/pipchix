AT_SETUP([setup_message(syntax)])

AT_KEYWORDS([default_keywords syntax])

m4_define([sexpr],
  [(let ((proc
           (lambda ()
             (define-syntax test
               (syntax-rules ()
                 ((_ x)
                  (if-stx-number x
                    (scheme->nix "yes")
                    (scheme->nix "no")))))
             (nix-list (test 4) (test "4")))))
     (proc))])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([@<:@·("yes")·("no")·@:>@·])],[])

