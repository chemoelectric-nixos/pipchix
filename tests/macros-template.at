AT_SETUP([setup_message((pipchix macros))])

AT_KEYWORDS([default_keywords macros])

m4_define([sexpr],
  [(nix-cond ((nix= (© `a) (© `b)) 1)
             (else 3))])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([(if·(·a·==·b·)·then·(1)·else·(3)·)·])],[])

m4_define([sexpr],
  [(nix-cond ((nix= (© `a) (© `b)) 1)
             (3))])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([(if·(·a·==·b·)·then·(1)·else·(3)·)·])],[])

m4_define([sexpr],
  [(nix-cond ((nix< (© `a) (© `b)) 1)
             ((nix= (© `a) (© `b)) 2)
             (else 3))])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([(if·(·a·<·b·)·then·(1)·else·(if·(·a·==·b·)·then·(2)·else·(3)·)·)·])],[])

m4_define([sexpr],
  [(nix-cond ((nix< (© `a) (© `b)) 1)
             ((nix= (© `a) (© `b)) 2)
             (3))])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([(if·(·a·<·b·)·then·(1)·else·(if·(·a·==·b·)·then·(2)·else·(3)·)·)·])],[])

m4_define([sexpr],
  [(nix-cond ((nix< (© `a) (© `b)) 1)
             ((nix= (© `a) (© `b)) 2)
             ((nix= (© `a) (© `c)) 3)
             (else 4))])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([(if·(·a·<·b·)·then·(1)·else·(if·(·a·==·b·)·then·(2)·else·(if·(·a·==·c·)·then·(3)·else·(4)·)·)·)·])],[])

m4_define([sexpr],
  [(nix-cond ((nix< (© `a) (© `b)) 1)
             ((nix= (© `a) (© `b)) 2)
             ((nix= (© `a) (© `c)) 3)
             (4))])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([(if·(·a·<·b·)·then·(1)·else·(if·(·a·==·b·)·then·(2)·else·(if·(·a·==·c·)·then·(3)·else·(4)·)·)·)·])],[])

m4_define([sexpr],[(nix-with () "e")])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([("e")·])],[])

m4_define([sexpr],[(nix-with ((© "a")) "e")])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([(with·a·;·("e")·)·])],[])

m4_define([sexpr],[(nix-with ((© "a") (© "b")) "e")])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([(with·a·;·(with·b·;·("e")·)·)·])],[])

m4_define([sexpr],[(nix-with ((© "a") (© "b") (© "c")) "e")])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([(with·a·;·(with·b·;·(with·c·;·("e")·)·)·)·])],[])

m4_define([sexpr],[(nix-lambda (()) 5)])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([(·{·}:·(5)·)·])],[])

AT_CLEANUP

