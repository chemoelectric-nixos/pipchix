m4_define([nix_null],[(builtins.null)
])
m4_define([nix_false],[(builtins.false)
])
m4_define([nix_true],[(builtins.true)
])

m4_define([setup_message],
          [m4_format([%s %30s],[tests_tag],[$1])])

m4_define([check_unquoted],[
AT_SKIP_IF([test enable_check = no])
AT_CHECK_UNQUOTED([$1],[$2],[$3],[$4],[$5],[$6])
])

m4_define([tests_template],[

m4_pushdef([tests_tag],[$1])
m4_pushdef([tests_banner],[$2])
m4_pushdef([default_keywords],[$3])
m4_pushdef([enable_check],[$4])
m4_pushdef([run_scheme],[$5])

AT_BANNER([tests_banner])

AT_SETUP([setup_message(<nix-embedded-node>)])
AT_KEYWORDS([default_keywords nix-embedded-node])
m4_define([sexpr],[(make-nix-embedded-node "let a = 4; b = a + 5; in b")])
check_unquoted([run_scheme 'sexpr'],[0],[let a = 4; b = a + 5; in b],[])
AT_CLEANUP

