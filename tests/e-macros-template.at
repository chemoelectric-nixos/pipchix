  [interpunct_nl([(40)·])],[])

m4_define([sexpr],[(scheme->nix (e-list 1 2 3 '\''(e-reverse '\''(e-list 4 5 (e-true) 6))))])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([@<:@·(1)·(2)·(3)·@<:@·(6)·nix_true[](5)·(4)·@:>@·@:>@·])],[])

AT_CLEANUP

