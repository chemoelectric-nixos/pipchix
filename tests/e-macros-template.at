AT_SETUP([setup_message(e-macros)])

AT_KEYWORDS([default_keywords e-macros])

# Currently the library does not work with the CHICKEN 5 compiler,
# unless you first actually install the ‘pipchix’ egg.
AT_SKIP_IF(m4_if(implementation,[csc-5],[true],[false]))

m4_define([sexpr],[(scheme->nix (e-false 1 2 3 4 5))])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([nix_false])],[])

m4_define([sexpr],[(scheme->nix (e-true 1 2 3 4 5))])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([nix_true])],[])

m4_define([sexpr],[(scheme->nix (e-list 1 2 3 '\''(e-list 4 5 (e-true) 6)))])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([@<:@·(1)·(2)·(3)·@<:@·(4)·(5)·nix_true[](6)·@:>@·@:>@·])],[])

m4_define([sexpr],[(scheme->nix (e-cons 1 '\''(e-list 4 5 6)))])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([@<:@·(1)·(4)·(5)·(6)·@:>@·])],[])

m4_define([sexpr],[(scheme->nix (e-xcons (e-list 4 5 6) 1))])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([@<:@·(1)·(4)·(5)·(6)·@:>@·])],[])

m4_define([sexpr],[(scheme->nix (e-cons* 1 2 3 (e-list 4 5 6)))])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([@<:@·(1)·(2)·(3)·(4)·(5)·(6)·@:>@·])],[])

m4_define([sexpr],[(scheme->nix (e-iota 7))])
