m4_define([sexpr],[(scheme->nix (e-iota 7 20 10))])
check_unquoted([run_scheme 'sexpr'],[0],
  [interpunct_nl([@<:@·(20)·(30)·(40)·(50)·(60)·(70)·(80)·@:>@·])],[])

m4_define([sexpr],[(scheme->nix (e-take (e-circular-list 1 2 3) 11))])
